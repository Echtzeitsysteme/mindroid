<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.mindroid.android.app.acitivites.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_connect"
            android:layout_alignParentTop="true"
            tools:ignore="NotSibling,UselessParent"
            android:weightSum="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/layout_infobox">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_info" />

            </FrameLayout>

            <Button
                android:text="activate Tethering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_activateTethering"
                android:elevation="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_to_robot"
                android:id="@+id/btn_connect"
                android:enabled="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/init_config"
                android:id="@+id/btn_initConfig"
                android:enabled="false" />

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="48dp" android:id="@+id/spinner_selectedStatemachine"
                    android:spinnerMode="dialog"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_robot"
                android:id="@+id/btn_startRobot"
                android:enabled="false" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/stop"
                android:id="@+id/btn_stopRobot"
                android:enabled="false" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/titleStatus"
                        android:id="@+id/txt_stateTitle"
                        android:layout_column="12"
                        android:textIsSelectable="false"
                        tools:targetApi="n" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/connected"
                        android:id="@+id/textView"
                        android:layout_column="12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/not_connected"
                        android:id="@+id/txt_isConnected"
                        android:layout_column="14" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/robot"
                        android:id="@+id/textView2"
                        android:layout_column="12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/not_running"
                        android:id="@+id/txt_stateRobot"
                        android:layout_column="14" />
                </TableRow>
            </TableLayout><![CDATA[









            TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />





        ]]>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/btn_settings" />

</RelativeLayout>
